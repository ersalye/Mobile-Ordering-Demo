<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btnAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClickAuthButton"
        android:text="Authenticate"
        app:layout_constraintStart_toStartOf="@+id/btn_menuActivity"
        app:layout_constraintTop_toBottomOf="@+id/btn_menuActivity" />

    <Button
        android:id="@+id/btn_menuActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickLaunchMenu"
        android:text="@string/launch_menu"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClearBag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Clear Bag"
        android:onClick="onClickClearBag"
        app:layout_constraintStart_toStartOf="@+id/btnAuth"
        app:layout_constraintTop_toBottomOf="@+id/btnAuth" />

</androidx.constraintlayout.widget.ConstraintLayout>